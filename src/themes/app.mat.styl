@import 'material.colors'

// App Shared Variables
// --------------------------------------------------
// Shared Stylus variables go in the app.variables.styl file
@import 'app.variables'


// App Material Design Variables
// --------------------------------------------------
// Material Design only Stylus variables can go here

$generic-border-radius      ?= 2px
$generic-input-size         ?= 25px
$generic-input-border-width ?= 2px

$typography-font-family     ?= 'Roboto'

$toolbar-color              ?= white
$toolbar-background         ?= $primary
$toolbar-active-color       ?= $primary
$toolbar-faded-color        ?= composite-color($primary)

.bg-primary-dark
	background-color $primary-dark !important
	color $primary-text
.bg-primary
	background-color $primary !important
	color $primary-text
.bg-primary-light
	background-color $primary-light !important
	color $primary-text
.text-primary
	color $primary-text !important
.bg-accent
	background-color $accent !important
.text-accent
	color $accent !important
.text-1
	color $text-1 !important
.text-2
	color $text-2 !important
.bg-divider
	border-color  $divider !important


.layout
	// padding 20px
	// background #262524 none repeat scroll 0 0
	// background url("/statics/img/resource/bg/bg3.png") no-repeat 50% 0px
	background-color: #3F51B5;
	background-repeat no-repeat
	background-position 50% 0
	background-attachment fixed/
	background-size cover/* cover || contain  */
	overflow hidden

.layout-view
	overflow hidden

